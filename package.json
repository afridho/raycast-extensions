{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bear",
  "title": "Bear Notes",
  "description": "Control Bear with Raycast",
  "icon": "command-icon.png",
  "version": "1.1.0",
  "author": "hmarr",
  "owner": "ridho-package",
  "contributors": [
    "lucaschultz",
    "diokhan",
    "ron-myers",
    "afridho"
  ],
  "access": "private",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Notes",
      "subtitle": "Bear",
      "description": "Search and open Bear notes",
      "mode": "view",
      "arguments": [
        {
          "name": "searchQuery",
          "placeholder": "Search Query",
          "type": "text",
          "required": false
        }
      ]
    }
  ],
  "preferences": [
    {
      "default": false,
      "description": "Opens the note in edit mode, placing the cursor at the end of the note",
      "label": "Focus cursor at end of the note",
      "name": "focusCursorAtEnd",
      "title": "Opening Notes",
      "required": false,
      "type": "checkbox"
    },
    {
      "default": true,
      "description": "Opens the note in New window mode or same window",
      "label": "Prefer open in New Window Mode",
      "name": "openBearBehavior",
      "required": false,
      "type": "checkbox"
    },
    {
      "default": "view",
      "description": "Open the note in preview mode or open bear to edit mode",
      "label": "Prefer open View or Edit",
      "name": "openPriority",
      "required": false,
      "title": "Default Priority",
      "type": "dropdown",
      "data": [
        {
          "title": "Open Preview",
          "value": "view"
        },
        {
          "title": "Open Note",
          "value": "edit"
        }
      ]
    },
    {
      "default": false,
      "description": "Shows a metadata in List & Preview",
      "label": "Show metadata in list and preview",
      "name": "showMetadataInListView",
      "required": false,
      "type": "checkbox"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.93.2",
    "@raycast/utils": "^1.19.1",
    "commonmark": "^0.31.0",
    "date-fns": "^3.6.0",
    "open": "^8.4.2",
    "sql.js": "^1.10.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/commonmark": "^0.27.9",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/sql.js": "^1.4.9",
    "eslint": "^9.21.0",
    "prettier": "^3.5.3",
    "typescript": "^5.5.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint",
    "lint-fix": "ray lint --fix",
    "publish": "ray publish",
    "prettier": "prettier --write . && prettier --check .",
    "update-sqlite-wasm": "cp node_modules/sql.js/dist/sql-wasm.wasm assets/sql-wasm.wasm"
  }
}
